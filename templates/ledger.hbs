<section class="ledger-body">

  <h3 class="ledger-project-name">{{projectName}}</h3>

  {{#if isEmpty}}
  <p class="ledger-empty"><i class="fas fa-inbox"></i> No entries yet.</p>
  {{else}}
  <table class="ledger-table">
    <thead>
      <tr>
        <th class="col-date">Date</th>
        <th class="col-source">Source</th>
        <th class="col-points">Points</th>
        <th class="col-notes">Notes</th>
        {{#if isGM}}<th class="col-actions"></th>{{/if}}
      </tr>
    </thead>
    <tbody>
      {{#each entries as |entry|}}
      <tr>
        <td class="col-date">{{entry.dateStr}}</td>
        <td class="col-source">{{entry.sourceLabel}}</td>
        <td class="col-points">+{{entry.points}}</td>
        <td class="col-notes">{{entry.notes}}</td>
        {{#if @root.isGM}}
        <td class="col-actions">
          <button type="button" class="icon-btn" data-action="deleteEntry" data-entry-id="{{entry.id}}" data-tooltip="Delete Entry">
            <i class="fas fa-trash"></i>
          </button>
        </td>
        {{/if}}
      </tr>
      {{/each}}
    </tbody>
    <tfoot>
      <tr class="ledger-total-row">
        <td></td>
        <td><strong>Total</strong></td>
        <td><strong>{{total}}</strong>{{#if goal}} / {{goal}}{{/if}}</td>
        <td colspan="{{#if isGM}}2{{else}}1{{/if}}"></td>
      </tr>
    </tfoot>
  </table>
  {{/if}}

</section>
