<form class="add-points-form" autocomplete="off">
  <input type="hidden" name="actorId" value="{{actorId}}" />
  <input type="hidden" name="itemId" value="{{itemId}}" />

  <h3 class="dialog-project-name">{{projectName}}</h3>

  <div class="form-group">
    <label for="ap-source">Source</label>
    <select id="ap-source" name="source">
      {{#each sources}}
      <option value="{{this.value}}" {{#if this.selected}}selected{{/if}}>{{this.label}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label for="ap-points">Points</label>
    <input id="ap-points" type="number" name="points" min="1" step="1" value="" placeholder="0" required />
  </div>

  <div class="form-group">
    <label for="ap-notes">Notes</label>
    <input id="ap-notes" type="text" name="notes" value="" placeholder="Optional descriptionâ€¦" />
  </div>

  <footer class="form-footer">
    <button type="button" data-action="submitPoints" class="btn"><i class="fas fa-plus"></i> Add to Ledger</button>
  </footer>
</form>
